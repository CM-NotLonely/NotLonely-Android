<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.efan.notlonely_android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name="com.efan.notlonely_android.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.MainActivity"
            android:theme="@style/activty"/>
        <!--menu-->
        <activity android:name=".ui.menu.CricleDetailsActivity"
            android:theme="@style/activty"/>
        <activity android:name=".ui.menu.ActivityDetailsActivity"
            android:theme="@style/activty"/>
        <!--find-->

        <!--publish-->
        <activity android:name=".ui.publish.PublishActivity"
            android:launchMode="singleTask"
            android:theme="@style/activty"/>
        <activity android:name=".ui.publish.UCropActivity"
            android:theme="@style/activty"/>
        <!--message-->

        <!--mine-->
        <activity android:name=".ui.mine.LoginActivity"
            android:theme="@style/activty"/>
    </application>
</manifest>
