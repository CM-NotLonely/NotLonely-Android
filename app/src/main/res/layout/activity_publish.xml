<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="@dimen/common_headerbar_height"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="20dp"
                android:src="@mipmap/ic_back"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerInParent="true"
                android:textSize="@dimen/text_max_20"
                android:textColor="@color/white"
                android:text="创建新圈子"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginRight="20dp"
                android:id="@+id/iv_back"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_marginTop="20dp"
        android:id="@+id/select"
        android:clickable="true"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/touxiang"/>
    <EditText
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="@dimen/text_big_18"
        android:id="@+id/et_circle_name"
        android:gravity="center"
        android:hint="圈子名称"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/select"/>
    <EditText
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="@dimen/text_mid_16"
        android:id="@+id/et_desc"
        android:gravity="center"
        android:hint="简介"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_circle_name"/>
    <LinearLayout
        android:layout_below="@id/et_desc"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_join_background"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_member"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_big_18"
            android:text="邀请朋友"
            android:textColor="@color/common"/>
    </LinearLayout>

</RelativeLayout>
