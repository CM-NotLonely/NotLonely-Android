<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cricle_image_height"
            android:scaleType="centerCrop"
            android:src="@mipmap/test" />
        <View
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cricle_image_height"
            android:background="@color/colorPrimary" />

        <RelativeLayout
            android:id="@+id/cricle_details"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:padding="16dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/cricle_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="200dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    style="@style/common_text_big"
                    android:text="骑行车队"/>
                <TextView
                    android:id="@+id/cricle_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="200dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    style="@style/common_text_little"
                    android:textColor="@color/colorPrimary"
                    android:text="14人"/>
            </LinearLayout>
            <TextView
                android:id="@+id/cricle_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                style="@style/common_text_medium"
                android:maxWidth="200dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="电子科技大学骑行车队"/>
            <ImageView
                android:id="@+id/cricle_people"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_member"/>
            <ImageView
                android:id="@+id/cricle_join"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/cricle_people"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_join"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/list_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white" />

    <com.github.ksoichiro.android.observablescrollview.ObservableRecyclerView
        android:id="@+id/scroll_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_headerbar_height"
        android:background="@color/colorPrimary">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_back"/>
            <TextView
                android:id="@+id/toolbar_cricle_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                style="@style/common_text_medium"
                android:text="骑行车队"/>

            <ImageView
                android:id="@+id/toolbar_cricle_people"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_member"/>
            <ImageView
                android:id="@+id/toolbar_cricle_join"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/toolbar_cricle_people"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_join"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</RelativeLayout>
