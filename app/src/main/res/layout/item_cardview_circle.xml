<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_marginTop="5dp"
    tools:cardCornerRadius="5dp"
    android:background="@color/background">


    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/test" />

    <com.efan.notlonely_android.view.BlurringView
        android:id="@+id/blurring"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:blurRadius="2"
        app:downsampleFactor="2"
        app:overlayColor="#10ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="吉他社"
                android:textColor="@color/white"
                android:textSize="@dimen/text_max_20" />

            <TextView
                android:id="@+id/tv_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="22人"
                android:textColor="@color/common"
                android:textSize="@dimen/text_mid_16" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="吉他爱好者们的聚集地"
            android:textColor="@color/white"
            android:textSize="@dimen/text_small_14" />
    </LinearLayout>
</android.support.v7.widget.CardView>
